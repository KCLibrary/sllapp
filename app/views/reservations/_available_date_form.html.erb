<%= form_tag new_reservation_path, :method => :post do %>
  <div class="row">
    <div class="span3">
      <div><p>Reserve up to three hours at a time</p></div>
      <div class="sll-times">
        <div class="sll-time-fields">
          <ul class="unstyled">
            <% schedule.availability_blocks.each_with_index do |o, i| %>
              <li>               
                <% o[:availability].each do |k, v| %>
                  <%= content_tag :label, :class => 'checkbox inline', 
                    :title => o[:hour].to_date.to_s do %>
                    <%= check_box_tag "reservation-times[#{k}][]", 
                      o[:hour].to_formatted_s, false, :id => 'reservation-times_#{k}_#{i}',
                      :disabled => (v ? nil : "disabled") %>
                  <% end %>
                <% end %>
                  <label class="checkbox inline time-helper">
                    <span><%= o[:hour].strftime("%I:%M%p") %></span>
                    <span class="sll-light-gray">
                      - <%= o[:hour].end_of_hour.strftime("%I:%M%p") %>
                    </span>
                  </label>       
              </li>
            <% end %>
          </ul>
        </div>
      </div> <!-- end sll-times -->
    </div>
    <hr class="visible-phone"/>
    <div class="span3 sll-post">
      <button class="btn btn-success btn-large">Make Reservation</button>
    </div>
  </div>
<% end %>
